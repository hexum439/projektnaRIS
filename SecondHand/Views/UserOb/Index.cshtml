@model IEnumerable<SecondHand.Models.skupnimodel>

@{
    ViewData["Title"] = "Index";
}

<h1>Vaša Oblačila</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h5>Oblačilo</h5>
            </th>
            <th>
                <h5>Slika</h5>
            </th>
            <th>
                <h5>Opis</h5>
            </th>
         
            <th>
                <h5>Cena</h5>
            </th>
            <th>
                <h5>Datum zadnje spremembe</h5>
            </th>
            <th>
                <h5>Kategorija</h5>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.oblacilapodatki.ImeOblacila)
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.oblacilapodatki.SlikaOblekeUrl)" width="100">
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.oblacilapodatki.opis)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.oblacilapodatki.cena)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.oblacilapodatki.DateCreated)
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.kategorijapodatki.ImeKategorije)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.oblacilapodatki.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.oblacilapodatki.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.oblacilapodatki.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
